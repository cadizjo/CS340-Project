<div id="popup-backdrop" class="hidden"></div>
<main id="projects-main-box" class="page-box">
    <h2 class="page-title">Projects</h2>
    
    <div class="crud-box">
        <h3 class="crud-title">Browse Projects</h3>
        <table class="search-results" border="1" cellpadding="5">
            <tr>
                <th>Project ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Start date</th>
                <th>End Date</th>
                <th>Active?</th>
                <th>Collaborative?</th>
                <th>Delete</th>
            </tr>
            <tr>
                <td>1</td>
                <td>Biology Group Final</td>
                <td>Final group research project for biology that will be presented at the end of the school year.</td>
                <td>2023-04-05</td>
                <td>NULL</td>
                <td>YES</td>
                <td>YES</td>
                <td><div class="delete-btn"><center><i class="fa-solid fa-trash"></i></center></div></td>            </tr>
            <tr>
                <td>2</td>
                <td>Spring Science Fair Project</td>
                <td>Conduct research on plants and create board before May to showcase at the Spring Science Fair.</td>
                <td>2023-01-01</td>
                <td>NULL</td>
                <td>YES</td>
                <td>NO</td> 
                <td><div class="delete-btn"><center><i class="fa-solid fa-trash"></i></center></div></td>            </tr>
            <tr>
                <td>3</td>
                <td>Arts and Crafts Project</td>
                <td>Personal art project that will be worked on during the summer for an art showcase.</td>
                <td>NULL</td>
                <td>NULL</td>
                <td>NO</td>
                <td>NO</td>
                <td><div class="delete-btn"><center><i class="fa-solid fa-trash"></i></center></div></td>            </tr>
        </table>
    </div>

    <p>&nbsp;</p>

    <div class="crud-box">
        <h3 class="crud-title">Add Project</h3>
        <form class="insert-form">
            <fieldset class="fields">
                <label>Title</label> <input type="text" name="project_title">
                <label>Description</label> <input type="text" name="project_description">
                <label>Start Date</label> <input type="date" name="start-date">
                <label>End Date</label> <input type="date" name="end-date">
                <label>Active?</label> <input type="checkbox" name="is-active" checked>
                <label>Collaborative?</label> <input type="checkbox" name="is-collaborative">
            </fieldset>
            <div class="buttons">
                <input class="accept-btn" type="submit" value="Submit">
                <input class="cancel-btn" type="button" value="Cancel">
            </div>
        </form> 
    </div>

    {{> deletePopup}}

</main>
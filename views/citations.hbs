<main id="citations-main-box" class="page-box">
    <h2 class="page-title">Citations</h2>

    <h3 class="crud-title">Browse Citations</h3>
    <div class="crud-box">
        <form class="search-box">
            <fieldset class="fields">
                <label>Title</label> <input type="search" name="citation_title">
                <label>Source</label> <input type="search" name="source">
                <label>Author</label> <input type="search" name="author">
                <label>URL</label> <input type="search" name="url">
            </fieldset>
            <input class="btn" type="submit" value="Search">
            <input class="cancel-btn" type="button" value="Cancel">
        </form>
    </div>


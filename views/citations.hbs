    <h3 class="crud-title">Add Citations </h3>
    <div class="crud-box">
        <form class="insert-form">
            <fieldset class="fields">
                <label>Title</label> <input type="text" name="citation_title">
                <label>Source</label> <input type="text" name="source">
                <label>Author</label> <input type="text" name="author">
                <label>url</label> <input type="text" name="url">
                <label>Citation ID</label> <input type="number" name="citation_id">
            </fieldset>
            <input class="btn" type="submit" value="Submit">
            <input class="cancel-btn" type="button" value="Cancel">
        </form>

<main id="tasks-main-box" class="page-box">
    <h2 class="page-title">Tasks</h2>
    
    <div class="crud-box">
        <h3 class="crud-title">Browse Assigned Tasks</h3>
        <form class="search-box">
            <fieldset class="fields">
                <label>Student Email</label> <input type="email" name="email">
            </fieldset>
            <div class="buttons">
                <input class="accept-btn" type="submit" value="Search">
                <input class="cancel-btn" type="button" value="Cancel">
            </div>
        </form> 
    </div>

